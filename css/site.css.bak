html,
body {
    height: 100%;
    margin: 0;
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif;
    font-size: 13px;
    color: #333;
    background: #fff;
    text-align: left;
}
body > .container-fluid {
    min-height: 100%;
    height: auto !important;
    height: 100%; /*IE6不识别min-height*/
    position: relative;
}
.container-fluid {
    padding-right: 0;
    padding-left: 0;
    width: 100%;
    margin: auto;
}

.wrap {
    height: auto;
    margin: 0 auto;
    padding: 0 0 60px;
    margin: auto 0;
}

.wrap > .container {
    margin: 0 auto;
    min-width: 1200px;
    width: 1200px;
    padding: 0;
}
.wrap > nav {
    background-color: #00adce;
    /*background-color: #00aedc;*/
}
.wrap .navbar-nav > li > a {
    color: #fff;
}
.wrap 
.list-group-item.active, 
.list-group-item.active:hover, 
.list-group-item.active:focus {
    z-index: 2;
    color: #fff;
    background-color: #00adce;
    border-color: #00adce;
}

.head {
    width: 1200px;
    height: 70px;
    position: relative;
    margin: 0 auto;
}
.head-logo {
    float: left;
    margin-top: 17px;
    width: 273px;
    height: 40px;
}
.head-user {
    float: right;
    margin-right: 10px;
    margin-top: 38px;
}
.head-user-right a {
    padding-left: 16px;
    margin-left: 16px;
    line-height: 13px;
    display: inline-block;
    border-left: 1px solid #e8e8e8; 
}
.footer {
    height: 40px;
    background-color: #f5f5f5;
    border-top: 1px solid #ddd;
    padding-top: 10px;
    position: absolute;
    bottom: 0;
    width: 100%;
}

.jumbotron {
    text-align: center;
    background-color: transparent;
}

.jumbotron .btn {
    font-size: 21px;
    padding: 14px 24px;
}

.not-set {
    color: #c55;
    font-style: italic;
}

/* add sorting icons to gridview sort links */
a.asc:after, a.desc:after {
    position: relative;
    top: 1px;
    display: inline-block;
    font-family: 'Glyphicons Halflings';
    font-style: normal;
    font-weight: normal;
    line-height: 1;
    padding-left: 5px;
}

a.asc:after {
    content: "\e151";
}

a.desc:after {
    content: "\e152";
}

.sort-numerical a.asc:after {
    content: "\e153";
}

.sort-numerical a.desc:after {
    content: "\e154";
}

.sort-ordinal a.asc:after {
    content: "\e155";
}

.sort-ordinal a.desc:after {
    content: "\e156";
}

.grid-view td {
    white-space: nowrap;
}

.grid-view .filters input,
.grid-view .filters select {
    min-width: 50px;
}

.hint-block {
    display: block;
    margin-top: 5px;
    color: #999;
}

.error-summary {
    color: #a94442;
    background: #fdf7f7;
    border-left: 3px solid #eed3d7;
    padding: 10px 20px;
    margin: 0 0 15px 0;
}

/* align the logout "link" (button in form) of the navbar */
.nav > li {
    width: 100px;
    text-align: center;
}
.nav > li > form {
    padding: 8px;
}

@media(max-width:768px) {
	.nav li > form {
	    padding: 3px;
	}
}

.nav > li > form > button:hover {
    text-decoration: none;
}
.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
}
.wrap table {
    margin: 0;
}
.wrap table > thead > tr > th {
    border-bottom-width: 1px;
}
.list-group-item > h5 {
    /*border-left: 3px solid #e63837;
    padding-left: 5px;*/
    margin-bottom: 10px;
    margin-left: -10px;
}
.list-group-item > h5 > label {
    color: #e63837;
    font-size: 18px;
    margin-right: 5px;
    text-align: center;
    width: 10px;
}
.list-group-item-text > table {
    margin-top: 15px;
}

